{
  "compilerOptions": {
    "baseUrl": ".",

    "paths": { "~/*": ["./*"], "@/*": ["./*"] },
    
    "types": ["node", "vite/client", "nuxt"],

    "target": "ES2020",

    "module": "ESNext",

    "moduleResolution": "Bundler",

    "lib": ["ES2020", "DOM"],

    "skipLibCheck": true,

    "strict": false,

    "jsx": "preserve"
  },

  "include": ["types/**/*.d.ts", "**/*.ts", "**/*.vue", "**/*.js"],

  "references": [],

  "exclude": ["node_modules", ".nuxt", "dist"]
}
